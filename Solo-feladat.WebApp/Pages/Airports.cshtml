@page
@model Solo_feladat.WebApp.Pages.AirportsModel
@{
    ViewData["Title"] = "Airports";
}

<h1>Repülőterek</h1>

<form method="post" enctype="multipart/form-data" form asp-page-handler="UploadFile">
    <div class="form-group">
        <div class="col-md-10">
            <input type="file" name="formFiles" multiple>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Fájlok feltöltése">
        </div>
    </div>
    @if (Model.ShowMessage)
    {
        <div class="alert alert-info alert-dismissible" role="alert">
            @Model.Message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</form>